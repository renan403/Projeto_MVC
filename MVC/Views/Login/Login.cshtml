@model ModelLogin
@{
     ViewBag.title = "Login";
}
@Html.AntiForgeryToken()
<div style="width:auto;height:500px;margin-bottom:5.5%">
   
    <div class=" mb-3" style="width:40%;margin:auto">
      @using (Html.BeginForm(FormMethod.Post ,new { enctype = "application/x-www-form-urlencoded"}))
         {
         @Html.ValidationSummary()  
         if(Model.Ativo == false){
             <div class="boxErroLogin  card border-info ">                            
                 <div style="margin: 2% 0 0 2%">
                    <h5 style="color:rgb(193,55,55)">  <img src="~/icones/exclamation-triangle.svg" style="width:30px; margin:0 0 0 2%"/> Houve um problema</h5>
                    <p>Não encontramos uma conta associada a este endereço de e-mail</p>
                 </div>              
             </div>
         }
         <div class="card border-info  mb-3" style="height:100%">
            <div class="card-header"><h3>Fazer login</h3></div>
            <div class="card-body">
              <div class="mb-3">                       
                   <label for="exampleInputEmail1" class="form-label"><strong>Email</strong></label>
                   @Html.TextBoxFor(m => m.Email, "", new {@class="form-control letraP", @TextMode="Email", @placeholder="Seu Email",@type="email", @Required ="Required",@oninvalid="setCustomValidity('Endereço de email inválido. Corrija e tente novamente.')",@oninput="setCustomValidity('')" })                   
                   <div class=" mb-3">
                       <label for="exampleInputPassword1" class="form-label" ><strong>Senha</strong></label>
                       <div class="input-group"> 
                           @Html.TextBoxFor(m => m.Senha, "", new {@class="form-control letraP",@type="password",@id="passwordLogin",@Required ="Required", @placeholder="Sua senha",@oninvalid="setCustomValidity('Campo senha vazio')",@oninput="setCustomValidity('')" })                           
                           <span class="input-group-text" id="basic-addon2"><img id="olho" onmouseout="mostrar()" onmouseup="mostrar()" onmousedown="ocultar()" src="~/icones/eye.svg" alt="" /></span>
                       </div>                                              
                    </div>
                   <button type="submit" style="width:100%;" class="btn btn-primary btn-sm">Confirmar</button> 
                   <p><br/>Ao continuar, você concorda com as <a href="#">Condições de uso</a> do APP.</p>
                   <a href="#">Precisa de ajuda?</a>
              </div>
            </div>
         </div>
         }
         <div class="adpHr"style="width:100%;margin:auto;color:orange;">
            <hr><p style="color:white;">&ensp;  Novo no app?  &ensp;</p><hr>
      </div>
      <div style="width:100%;margin:auto;text-align:center">
      <a style="width:100%;" class="btn btn-outline-primary btn-sm" asp-action="CriarConta" asp-controller="Login"><strong>Criar sua conta</strong></a> 
      </div>
   </div> 
</div>



  
    